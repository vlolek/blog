---
import type { GetStaticPaths, Page } from 'astro'
import type { CollectionEntry } from 'astro:content'
import { EDUCATION_CONFIG } from '~/config'
import { getAllEducation } from '~/lib/data'
import Layout from '~/layouts/Layout.astro'
import Pagination from '~/components/base/Pagination.astro'
import List from '~/components/posts/card/List.astro'
import PageTitle from '~/components/base/PageTitle.astro'

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  const sortedEducation = await getAllEducation()

  return paginate(sortedEducation, {
    pageSize: EDUCATION_CONFIG.postPageConfig.size,
  })
}

interface Props {
  page: Page<CollectionEntry<'education'>>
}

const { page } = Astro.props

const { title, description, introduce } = EDUCATION_CONFIG
---

<Layout {title} {description}>
  <div class="relative z-[1] py-8 pb-10 px-6 sm:px-8">
    <PageTitle {title} {introduce} />
    <div class="mt-12 fade-up">
      <List posts={page.data} type={EDUCATION_CONFIG.postPageConfig.type} coverLayout={EDUCATION_CONFIG.postPageConfig?.coverLayout} baseUrl="/education" />
    </div>
    <Pagination {page} baseUrl="/education" />
  </div>
</Layout>

