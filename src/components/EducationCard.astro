---
import AvatarComponent from '@/components/ui/avatar'
import { Badge } from '@/components/ui/badge'
import { Separator } from '@/components/ui/separator'
import {
  getEducationCombinedReadingTime,
  getEducationSubpostCount,
  isEducationSubpost,
  parseAuthors,
} from '@/lib/collections'
import { formatDate } from '@/lib/utils'
import { Icon } from 'astro-icon/components'
// import { Image } from 'astro:assets'
import type { CollectionEntry } from 'astro:content'
import Link from './Link.astro'

interface Props {
  entry: CollectionEntry<'education'>
  cardClass?: string
}

const { entry, cardClass = '' } = Astro.props
const formattedDate = formatDate(entry.data.date)
const readTime =
  await getEducationCombinedReadingTime(entry.id)
const authors = await parseAuthors(
  entry.data.authors ?? [],
)
const subpostCount = !isEducationSubpost(entry.id)
  ? await getEducationSubpostCount(entry.id)
  : 0
---

<div
  class={`hover:bg-muted/50 border border-border bg-muted/30 p-4 transition-colors duration-300 ease-in-out ${cardClass}`}
>
  <Link
    href={`/${entry.collection}/${entry.id}`}
    class="flex flex-col gap-4 sm:flex-row"
    title={`Leggi l'articolo di formazione: ${entry.data.title}`}
  >
    {
      entry.data.image && (
        <div class="w-full overflow-hidden sm:max-w-3xs sm:shrink-0">
          <img
            src={entry.data.image.src}
            alt={entry.data.title}
            class="h-32 w-full object-cover"
            loading="lazy"
          />
        </div>
      )
    }

    <div class="grow">
      <h3 class="mb-1 text-lg font-medium">
        {entry.data.title}
      </h3>
      <p
        class="text-muted-foreground mb-1 text-sm"
      >
        {entry.data.description}
      </p>

      <div
        class="text-muted-foreground mb-2 flex flex-wrap items-center gap-x-2 text-xs"
      >
        {
          authors.length > 0 && (
            <>
              {authors.map((author) => (
                <div class="flex items-center gap-x-1.5">
                  <AvatarComponent
                    client:load
                    src={author.avatar}
                    alt={author.name}
                    fallback={author.name[0]}
                    className="size-5"
                  />
                  <span>{author.name}</span>
                </div>
              ))}
              <Separator
                orientation="vertical"
                className="h-4!"
              />
            </>
          )
        }
        <!-- <span>{formattedDate}</span>
        <Separator orientation="vertical" className="h-4!" /> -->
        <span>{readTime}</span>
        {
          subpostCount > 0 && (
            <>
              <Separator
                orientation="vertical"
                className="h-4!"
              />
              <span class="flex items-center gap-1">
                <Icon
                  name="lucide:file-text"
                  class="size-3"
                  aria-hidden="true"
                />
                {subpostCount} subpost
                {subpostCount === 1 ? '' : 's'}
              </span>
            </>
          )
        }
      </div>

      {
        entry.data.tags && (
          <div class="flex flex-wrap gap-2">
            {entry.data.tags.map((tag) => (
              <Badge
                variant="muted"
                className="flex items-center gap-x-1"
              >
                <Icon
                  name="lucide:hash"
                  class="size-3"
                  aria-hidden="true"
                />
                {tag}
              </Badge>
            ))}
          </div>
        )
      }
    </div>
  </Link>
</div>
