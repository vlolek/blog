---
interface Props {
  name: string
  url: string
  logo?: string
}

const { name, url, logo } = Astro.props

const orgData = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  name,
  url,
  ...(logo && {
    logo: {
      '@type': 'ImageObject',
      url: logo,
    },
  }),
}
---

<script
  is:inline
  type="application/ld+json"
  set:html={JSON.stringify(orgData)}
/>


