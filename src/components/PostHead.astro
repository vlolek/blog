---
import { SITE } from '@/consts'
import { parseAuthors, type PostCollection } from '@/lib/collections'
import { getCanonicalUrl } from '@/lib/utils'
import type { CollectionEntry } from 'astro:content'
import { getImage } from 'astro:assets'
import ArticleStructuredData from '@/components/StructuredData.astro'

interface Props {
  post: CollectionEntry<'blog' | 'education'>
  collection: PostCollection
  breadcrumbs?: Array<{ name: string; url: string }>
}

const { post, collection, breadcrumbs = [] } = Astro.props

// Importa la funzione isSubpost corretta in base alla collection
let isSubpostFn: (id: string) => boolean
if (collection === 'blog') {
  const { isSubpost } = await import('@/lib/collections')
  isSubpostFn = isSubpost
} else {
  const { isEducationSubpost } = await import('@/lib/collections')
  isSubpostFn = isEducationSubpost
}

const title = post.data.title || SITE.title
const description = post.data.description || SITE.description
const defaultImage = new URL('/static/1200x630.png', Astro.site)
const author =
  post.data.authors && post.data.authors.length > 0
    ? post.data.authors.join(', ')
    : SITE.author

// Ottieni gli autori con URL per structured data
const authors = await parseAuthors(post.data.authors ?? [])
const authorsWithUrl = authors.map((author) => ({
  name: author.name,
  url: author.isRegistered ? new URL(`/authors/${author.id}`, Astro.site).href : undefined,
}))

// Ottieni l'URL pubblico dell'immagine se presente
let ogImage = defaultImage
if (post.data.image) {
  const optimizedImage = await getImage({ src: post.data.image, width: 1200, height: 630 })
  ogImage = new URL(optimizedImage.src, Astro.site)
}

// Normalizza l'URL canonical rimuovendo trailing slash e query params
const canonicalUrl = getCanonicalUrl(Astro.url, Astro.site)
const publishedTime = post.data.date.toISOString()
const modifiedTime = post.data.date.toISOString()

// Gestisci noindex: solo se subpost
const noindex = isSubpostFn(post.id)
---

<title>{`${title} | ${SITE.title}`}</title>
<meta name="title" content={`${title} | ${SITE.title}`} />
<meta name="description" content={description} />
<link rel="canonical" href={canonicalUrl.href} />

{noindex && <meta name="robots" content="noindex" />}

<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage.toString()} />
<meta property="og:image:alt" content={title} />
<meta property="og:type" content="article" />
<meta property="og:locale" content={SITE.locale} />
<meta property="og:site_name" content={SITE.title} />
<meta property="og:url" content={canonicalUrl.href} />
<meta property="article:published_time" content={publishedTime} />
<meta property="article:modified_time" content={modifiedTime} />
{post.data.tags && post.data.tags.length > 0 && (
  post.data.tags.map((tag: string) => (
    <meta property="article:tag" content={tag} />
  ))
)}
{authorsWithUrl.map((author) => (
  author.url ? (
    <meta property="article:author" content={author.url} />
  ) : (
    <meta property="article:author" content={author.name} />
  )
))}

<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImage.toString()} />
<meta name="twitter:image:alt" content={title} />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:creator" content={author} />

<ArticleStructuredData post={post} collection={collection} authors={authorsWithUrl} breadcrumbs={breadcrumbs} />
