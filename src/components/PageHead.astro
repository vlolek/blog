---
import { SITE } from '@/consts'
import OrganizationStructuredData from '@/components/OrganizationStructuredData.astro'
import { getCanonicalUrl } from '@/lib/utils'

interface Props {
  title?: string
  description?: string
  noindex?: boolean
  includeOrganization?: boolean
}

const {
  title,
  description = SITE.description,
  noindex = false,
  includeOrganization = false,
} = Astro.props

// Se title non Ã¨ fornito, usa solo SITE.title (per homepage)
// Altrimenti usa "title | SITE.title"
const pageTitle = title ? `${title} | ${SITE.title}` : SITE.title
const ogTitle = title || SITE.title

const ogImage = new URL('/static/1200x630.png', Astro.site)

// Normalizza l'URL canonical rimuovendo trailing slash e query params
// Per la homepage, mantieni il trailing slash
const canonicalUrl = getCanonicalUrl(Astro.url, Astro.site)
---

<title>{pageTitle}</title>
<meta name="title" content={pageTitle} />
<meta name="description" content={description} />
<link rel="canonical" href={canonicalUrl.href} />
{noindex && <meta name="robots" content="noindex" />}

<meta property="og:title" content={ogTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage.toString()} />
<meta property="og:image:alt" content={ogTitle} />
<meta property="og:type" content="website" />
<meta property="og:locale" content={SITE.locale} />
<meta property="og:site_name" content={SITE.title} />
<meta property="og:url" content={canonicalUrl.href} />

<meta name="twitter:title" content={ogTitle} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImage.toString()} />
<meta name="twitter:image:alt" content={ogTitle} />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:creator" content={SITE.author} />

<meta name="google-site-verification" content="BcklbM_dwNBjpdj4IJMvS9kgS7TtSwqFuoSdrgVp9SA" />

{includeOrganization && (
  <>
    <OrganizationStructuredData
      name={SITE.title}
      url={SITE.href}
      logo={new URL('/static/logo.png', Astro.site).href}
    />
    {Astro.url.pathname === '/' && (
      <script
        is:inline
        type="application/ld+json"
        set:html={JSON.stringify({
          '@context': 'https://schema.org',
          '@type': 'WebSite',
          name: SITE.title,
          url: SITE.href,
          description: SITE.description,
          publisher: {
            '@type': 'Organization',
            name: SITE.title,
            url: SITE.href,
            logo: {
              '@type': 'ImageObject',
              url: new URL('/static/logo.png', Astro.site).href,
            },
          },
          potentialAction: {
            '@type': 'SearchAction',
            target: {
              '@type': 'EntryPoint',
              urlTemplate: `${SITE.href}/blog?q={search_term_string}`,
            },
            'query-input': 'required name=search_term_string',
          },
        })}
      />
    )}
  </>
)}