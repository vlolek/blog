---
import Link from '@/components/Link.astro'
import Logo from '@/components/Logo.astro'
import ThemeToggle from '@/components/ThemeToggle.astro'
import { NAV_LINKS, SITE } from '@/consts'
import {
  getAllPosts,
  getAllProjects,
  getAllEducation,
} from '@/lib/collections'

// Controllo se ci sono contenuti disponibili
const [posts, projects, education] = await Promise.all([
  getAllPosts(),
  getAllProjects(),
  getAllEducation(),
])

// Mappa delle sezioni
const availableSections: Record<string, boolean> = {
  '/blog': posts.length > 0,
  '/projects': projects.length > 0,
  '/education': education.length > 0,
}

// Filtra i nav links in base ai contenuti disponibili
const visibleNavLinks = NAV_LINKS.filter(
  (link) => availableSections[link.href] !== false
)
---

<div>
  <div
    class="mx-auto flex max-w-3xl items-center justify-between gap-4 px-4 py-4"
  >
    <Link href="/" class="flex shrink-0 items-center justify-center gap-3 text-foreground" aria-label="Vai alla homepage" title="Vai alla homepage">
      <Logo class="size-5 sm:size-6" />
      <span
        class="hidden h-full text-lg leading-none font-medium min-[400px]:block"
        >{SITE.title}</span
      >
    </Link>
    <div class="flex items-center gap-2">
      <nav class="flex items-center gap-3 text-sm sm:gap-4" aria-label="Navigazione principale">
        {
          visibleNavLinks.map((item) => (
            <Link
              href={item.href}
              class="text-foreground/70 hover:text-foreground transition-colors min-h-[44px] flex items-center"
              title={`Vai alla sezione ${item.label}`}
            >
              {item.label}
            </Link>
          ))
        }
      </nav>
      <ThemeToggle transition:persist />
    </div>
  </div>
</div>
